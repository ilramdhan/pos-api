# Environment Configuration for POS API
# Copy this file to .env and update values accordingly

# Application
APP_ENV=development
APP_PORT=8080
APP_NAME="POS API"
APP_VERSION=1.0.0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY_HOURS=24
JWT_REFRESH_EXPIRY_HOURS=168

# Database (SQLite for local dev, D1 for Cloudflare)
DB_DRIVER=sqlite3
DB_PATH=./data/pos.db

# Cloudflare D1 Configuration (for production)
# D1_DATABASE_ID=your-d1-database-id
# D1_ACCOUNT_ID=your-cloudflare-account-id
# D1_API_TOKEN=your-cloudflare-api-token

# Rate Limiting
RATE_LIMIT_RPS=100
RATE_LIMIT_BURST=200

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json
